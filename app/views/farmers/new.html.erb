<div class="container mb-5">

<div class="mainBox pb-3 shadow-sm">
  <div class="pageHeader container shadow-sm mb-4 farmersTitle">
    <div class="row">
      <div class="pageTitle col-sm-5">
      <h1>生産者情報の登録</h1>
      </div>
      
      <div class="newBtnBox col-sm-7 text-right">
      <button class="newBtnSales m-2 ">
        <%= link_to '生産者一覧へ', farmers_path %> 
      </button>
  </div>
  </div>
</div>

<div class="container">





<%= form_for(@farmer) do |f| %>
<div class="field">
  <%= f.label :生産者名 %><br>
  <%= f.text_field :farmer_name %>
</div>
<div class="field">
  <%= f.label :エリア %><br>
  <%= f.text_field :farmer_area %>
</div>
<div class="field">
  <%= f.label :住所 %><br>
  <%= f.text_field :farmer_address %>
</div>
<div class="field">
  <%= f.label :メールアドレス %><br>
  <%= f.email_field	 :farmer_email %>
</div>
<div class="field">
  <%= f.label :電話番号 %><br>
  <%= f.text_field :farmer_tel %>
</div>
<div class="field">
  <%= f.label :緯度 %><br>
  <%= f.text_field :farmer_map_latitude %>
</div>
<div class="field">
  <%= f.label :経度 %><br>
  <%= f.text_field :farmer_map_longitude %>
</div>
<div class="field">
  <%= f.label :gmapコード %><br>
  <%= f.text_field :farmer_map_code %>
</div>
<div class="field">
  <%= f.label :備考 %><br>
  <%= f.text_area :farmer_memorandum %>
</div>
<br>
<div class="actions">
  <%= f.submit "新規生産者を登録"%>
</div>
<% end %>

  </div>
</div>
