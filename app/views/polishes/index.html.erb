<div class="container">

<p class="time-limit" id="notice"><%= notice %></p>
  <div class="mainBox pb-3 shadow-sm">
    <div class="pageHeader container shadow-sm mb-4 polishesTitle">
      <div class="row">
        <div class="pageTitle col-sm-3">
        <h1>精米 一覧</h1>

        </div>

        <div class="newBtnBox col-sm-8 text-right">
        <button class="newBtnPolishes my-2">
        <%= link_to '新規精米登録', new_polish_path %>
        </button>
        </div>

        <div class="col-sm-1"></div>

      </div>
    </div>

 <div class="tableBox container">
    <table class="mx-auto">
      <thead>
        <tr>
          <th>ID</th>
          <th>精米日</th>
          <th class="bg-primary">合計精米量（袋）</th>
          <th>内訳-1</th>
          <th>使用量（袋）</th>
          <th>内訳-2</th>
          <th>使用量（袋）</th>
          <th>内訳-3</th>
          <th>使用量（袋）</th>
          <th>内訳-4</th>
          <th>使用量（袋）</th>
          <th>内訳-5</th>
          <th>使用量（袋）</th>
          <th>メモ</th>

        </tr>
      </thead>

      <tbody>
        <% @polishes.each do |polish| %>
        <tr>
          <td><%=link_to polish.id, polish %></td>
          <td><%= polish.polish_day %></td>
          <td class="strong bg-info" style="font-size:24px"><%= polish.polish_amount_total%></td>
          <td><%= polish.polish_1_farmer %></td>
          <td><%= polish.polish_1_amount %></td>
          <td><%= polish.polish_2_farmer %></td>
          <td><%= polish.polish_2_amount %></td>
          <td><%= polish.polish_3_farmer %></td>
          <td><%= polish.polish_3_amount %></td>
          <td><%= polish.polish_4_farmer %></td>
          <td><%= polish.polish_4_amount %></td>
          <td><%= polish.polish_5_farmer %></td>
          <td><%= polish.polish_5_amount %></td>
          <td><%= polish.polish_memorandum %></td>

          <td class="showBtnBox"><button class="mx-1"><%= link_to "詳細", polish %></button></td>
          <td class="editBtnBox"><button class="mx-1"><%= link_to "編集", edit_polish_path(polish) %></button></td>
          <td class="deleteBtnBox"><button class="mx-1"><%= link_to "削除", polish ,method: :delete, data: {confirm: "削除します。この処理は取り消せません。"} %></button></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>



</div>