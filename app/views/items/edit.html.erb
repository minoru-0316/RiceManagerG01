<div class="container mb-5">


<%= form_with(model: @item, local: true) do |form| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% end %>


<div class="mainBox pb-3 shadow-sm">
  <div class="pageHeader container shadow-sm mb-4 itemsTitle">
    <div class="row">
      <div class="pageTitle col-sm-5">
      <h1 class="itemsH1">商品情報の編集</h1>

      </div>
      
      <div class="newBtnBox col-sm-7 text-right">
      <button class="newBtnSales m-2 ">
      <%= link_to '商品一覧へ戻る', items_path %>
      </button>
  </div>

  </div>
</div>

<div class="container">




<%= form_for(@item) do |f| %>
<div class="field">
  <%= f.label :商品名 %><br>
  <%= f.text_field :item_name %>
</div>
<div class="field">
  <%= f.label :単価（税別） %><br>
  <%= f.text_field :item_price_without_tax %>
</div>
<div class="field">
  <%= f.label :備考 %><br>
  <%= f.text_area :item_memorandum %>
</div>
<br>
<div class="actions">
  <%= f.submit "商品情報を編集"%>
</div>
