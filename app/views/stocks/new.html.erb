<div class="container mb-5">


<div class="mainBox pb-3 shadow-sm">
  <div class="pageHeader container shadow-sm mb-4 stocksTitle">
    <div class="row">
      <div class="pageTitle col-sm-5">
      <h1>新規入荷の登録</h1>
      </div>
      
      <div class="newBtnBox col-sm-7 text-right">
      <button class="newBtnSales m-2 ">
        <%= link_to '仕入れ（在庫）一覧へ', stocks_path %>
      </button>
  </div>
  </div>
</div>

<div class="container">



<%= form_for(@stock) do |f| %>
<div class="field">
  <%= f.label :入荷日 %><br>
  <%= f.datetime_select :stock_arrivalday %>
</div>

<div class="field">
  <%= f.label :生産者id %><br>
  <%= f.collection_select(:farmer_id, @farmers, :id, :farmer_name, {prompt: "生産者を選択"} ) %>
</div>
<div class="field">
  <%= f.label :銘柄 %><br>
  <%= f.text_field :stock_brand %>
</div>
<div class="field">
  <%= f.label :仕入れ量（袋） %><br>
  <%= f.text_field :stock_purchased_amount %>
  <span>袋</span> 

</div>
<div class="field">
  <%= f.label :仕入れ単価（税別） %><br>
  <%= f.text_field :stock_price_without_tax %>
  <span>円</span> 
</div>

<div class="field">
  <%= f.label :仕入れ単価（税込み：8％） %><br>
  <%= f.text_field :stock_price_tax_included %>
  <span>円</span> 
</div>

<div class="field">
  <%= f.label :備考 %><br>
  <%= f.text_area :stock_memorandum %>
</div>

<br>
<div class="actions">
  <%= f.submit "新規在庫を登録"%>
</div>
<% end %>

</div>
</div>

